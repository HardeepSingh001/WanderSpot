    <h1>All Spots</h1>
    
 
        <%for(let spot of spots){ %>
            <div class="card mb-3" >
                <div class="row">
                    <div class="col-md-4" style="height: 100%">
                        <img class="img-fluid"src="<%=spot.image %>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=spot.title %></h5>
                            <p class="card-text"><%=spot.description%></p>
                            <p class="card-text">
                                <small class="text-muted"><%=spot.location%></small>
                            </p>
                            <a class="btn btn-primary"href="/spots/<%=spot._id%>">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
         <%}%>



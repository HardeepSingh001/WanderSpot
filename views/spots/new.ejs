<%layout('layouts/boilerplate')%>

<div class="row mb-3">
    <h1 class="text-center">New Spot</h1>
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <div class="card shadow">
            <div class="card-body">
        <form action="/spots" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="spot[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="spot[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="spot[image]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Spot price (â‚¹)</label>
                <input class="form-control" type="text" id="price" placeholder="0.00" name="spot[price]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="spot[description]" required></textarea>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Add Spot</button>
            </div>

            
        </form>
    </div>
    </div> 
        
    </div>
</div>


    